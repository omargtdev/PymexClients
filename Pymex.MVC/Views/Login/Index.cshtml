@model Pymex.MVC.Models.LoginAccount

@{
    ViewBag.BodyCssClass = "bg-gradient-primary";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}


<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Bienvenido!</h1>
                                </div>

                                <form action="~/Login/Authenticate" method="post" class="user">
                                    <div class="form-group">
                                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control form-control-user", @aria_describedby = "usernameHelp", @placeholder = "Ingresa tu nombre de usuario..." })
                                        @*<input type="email" class="form-control form-control-user"
                id="username" aria-describedby="usernameHelp"
                placeholder="Ingresa tu nombre de usuario...">*@
                                        @Html.ValidationMessageFor(model => model.Username)
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control form-control-user", @placeholder = "Ingresa tu contraseña..." })
                                        @*<input type="password" class="form-control form-control-user"
                id="password" placeholder="Ingresa tu contraseña...">*@
                                        @Html.ValidationMessageFor(model => model.Password)
                                    </div>

                                    <button type="submit" class="btn btn-primary btn-user btn-block">Login</button>
                                </form>

                                @Html.ValidationMessage(modelName: "loginError", htmlAttributes: new { @class = "text-danger" })

